<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

    <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgGame"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.281"/>


    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imgGame"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:text="10:00"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTime"
            app:layout_constraintLeft_toRightOf="@id/imgGame"
            android:layout_marginLeft="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>



